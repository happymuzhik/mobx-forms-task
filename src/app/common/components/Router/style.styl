@import '../../styles/vars.styl'

.header
    text-align: center

.menu
    display: flex
    justify-content: space-around
    padding-bottom: 20px
    border-bottom: 1px solid $main-color
    &__item
        font-size: 1.5rem
        color: $inactive-color
        &:hover
        &:active
            color: $inactive-color - 20%
        &--active
        &--valid
            color: $active-color
            &:hover
            &:active
                color: $active-color + 20%